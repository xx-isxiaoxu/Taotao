<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="taotaomall.dao.UserDao">
    <!-- 根据用户名查询用户 -->
    <select id="findByUsername" resultType="taotaomall.model.User">
        SELECT * FROM user WHERE username = #{username}
    </select>
    
    <!-- 根据ID查询用户 -->
    <select id="findById" resultType="taotaomall.model.User">
        SELECT * FROM user WHERE id = #{id}
    </select>
    
    <!-- 添加用户 -->
    <insert id="insert" parameterType="taotaomall.model.User">
        INSERT INTO user (username, password, email, phone, created_at, updated_at)
        VALUES (#{username}, #{password}, #{email}, #{phone}, NOW(), NOW())
    </insert>
    
    <!-- 更新用户信息 -->
    <update id="update" parameterType="taotaomall.model.User">
        UPDATE user
        SET username = #{username},
            email = #{email},
            phone = #{phone},
            updated_at = NOW()
        WHERE id = #{id}
    </update>
</mapper>
