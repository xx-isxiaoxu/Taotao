<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="taotaomall.dao.GoodsDao">
    <select id="getAllgoods" resultType="taotaomall.entity.Goods">
        select * from goods
    </select>

    <select id="getGoodById" resultType="taotaomall.entity.Goods">
        select * from goods where gid = #{gid}
    </select>

    <select id="searchGoodsByName" resultType="taotaomall.entity.Goods">
        SELECT * FROM goods WHERE gname LIKE CONCAT('%', #{gname}, '%')
    </select>
</mapper>